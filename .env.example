# ─── Database ──────────────────────────────────────────────
DATABASE_URL=postgresql+asyncpg://datamind:yourpassword@localhost:5432/datamind_app
DB_PASSWORD=yourpassword

# ─── Redis ─────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379/0

# ─── AI ────────────────────────────────────────────────────
ANTHROPIC_API_KEY=sk-ant-api03-xxxxxxxxxxxxx

# ─── Authentication (Backend is sole JWT issuer) ───────────
JWT_SECRET=change-me-generate-with-openssl-rand-hex-32
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ─── NextAuth (calls backend for auth, stores session) ────
NEXTAUTH_SECRET=change-me-generate-with-openssl-rand-hex-32
NEXTAUTH_URL=http://localhost:3000

# ─── Encryption (AES-256-GCM for stored DB passwords) ─────
ENCRYPTION_KEY=change-me-generate-with-openssl-rand-base64-32

# ─── Frontend ──────────────────────────────────────────────
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# ─── CORS ──────────────────────────────────────────────────
CORS_ORIGINS=["http://localhost:3000"]

# ─── Optional: Email (alert notifications) ─────────────────
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
